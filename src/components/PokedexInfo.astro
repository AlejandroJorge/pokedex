---
import Stats from "./Stats.astro";
import "../css/color-palette.css";
import "../css/types.css";
import capitalize from "../js/capitalize";

const {
  capitalizedName = "Name not found",
  stats = [],
  types = [],
} = Astro.props;
---

<div id="info-container">
  <h2><span class="dynamic-info">{capitalizedName}</span></h2>
  <div id="types-container">
    {types.length > 1 ? <h3>Types:</h3> : <h3>Type:</h3>}
    <ul id="types-list">
      {
        types.map((type) => {
          return (
            <li>
              <div class:list={[type.type.name, "type-container"]}>
                <p>{capitalize(type.type.name)}</p>
              </div>
            </li>
          );
        })
      }
    </ul>
  </div>
  <Stats stats={stats} />
</div>

<style>
  ul {
    list-style-type: none;
    display: flex;
  }
  .type-container {
    display: inline-block;
    padding: 8px 12px;
    border-radius: 5px;
    margin-right: 10px;
    margin-bottom: 10px;
    color: var(--lightest);
    font-weight: 700;
    text-shadow: 1px 1px var(--darker);
  }
  .dynamic-info {
    color: var(--darker);
    font-weight: 00;
  }
  h2 {
    font-size: 36px;
    text-align: center;
    margin-bottom: 5px;
    text-shadow: 1px 1px var(--darkest);
  }
  h3 {
    margin-bottom: 5px;
  }
</style>
